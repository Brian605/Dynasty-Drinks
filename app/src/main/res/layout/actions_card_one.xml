<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/Widget.MaterialComponents.CardView"
    android:layout_margin="5dp"
    android:elevation="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:background="@drawable/bg_round_purplish"
            android:padding="10dp"
            android:layout_alignParentStart="true"
            android:id="@+id/officialStores"
            android:src="@drawable/ic_baseline_shopping_basket_24"
            />
<com.google.android.material.textview.MaterialTextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:text="@string/official_n_stores"
    android:layout_below="@+id/officialStores"
    android:textStyle="bold"
    android:layout_alignStart="@+id/officialStores"
    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:background="@drawable/bg_round_blue"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/freeDelivery"
            android:src="@drawable/ic_baseline_local_shipping_24"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/free_br_delivery"
            android:layout_below="@+id/freeDelivery"
            android:textStyle="bold"
            android:layout_alignStart="@+id/freeDelivery"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:background="@drawable/bg_round_green"
            android:padding="10dp"
            android:layout_alignParentEnd="true"
            android:id="@+id/creditCashBack"
            android:src="@drawable/ic_baseline_mobile_screen_share_24"
           />
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/credo_cashbacks"
            android:layout_below="@+id/creditCashBack"
            android:textStyle="bold"
            android:layout_alignStart="@+id/creditCashBack"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"/>

    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>