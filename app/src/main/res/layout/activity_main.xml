<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragmentContainer"
    tools:context=".activities.MainActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:liftOnScroll="true"
        android:background="@color/white"
        android:minHeight="70dp">

            <com.google.android.material.appbar.MaterialToolbar
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:id="@+id/toolBar"
                app:title="Dynasty Drinks"
                app:titleMarginStart="10dp"
                android:padding="5dp"
                app:titleTextColor="@color/grey"
                app:collapseIcon="@drawable/ic_baseline_arrow_back_ios_24"
                app:layout_collapseMode="parallax"/>


    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_marginBottom="70dp"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.returno.dynasty.custom.IndicatedViewFlipper
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:id="@+id/viewFlipper"
        android:paddingBottom="15dp"
        >
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/l8"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:background="@drawable/bg_white_round_corner"
            />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/l1"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:background="@drawable/bg_white_round_corner"
                />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/l2"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:background="@drawable/bg_white_round_corner"
                />
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/l4"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:background="@drawable/bg_white_round_corner"
                />
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/l5"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:background="@drawable/bg_white_round_corner"
                />
        </com.google.android.material.card.MaterialCardView>

    </com.returno.dynasty.custom.IndicatedViewFlipper>
     <de.hdodenhof.circleimageview.CircleImageView
         android:layout_width="50dp"
         android:layout_height="50dp"
         android:background="@drawable/bg_round_grey"
         android:src="@drawable/ic_baseline_arrow_back_white"
         android:layout_marginTop="80dp"
         android:padding="10dp"
         android:layout_marginStart="20dp"
         android:elevation="7dp"
         android:id="@+id/flipPrev"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_round_grey"
            android:src="@drawable/ic_baseline_arrow_forward_white"
            android:layout_marginTop="80dp"
            android:padding="10dp"
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"
            android:elevation="7dp"
            android:id="@+id/flipNext"/>
        <include
            layout="@layout/actions_card_one"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/card1"
            android:layout_below="@+id/viewFlipper"
            android:layout_marginTop="5dp"/>
        <include
            layout="@layout/actions_card_two"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/card1"
            android:id="@+id/layout2"
            android:layout_marginTop="5dp"/>
        <include
            layout="@layout/recycler_layout"
            android:layout_below="@+id/layout2"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
    </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

     <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:menu="@menu/bottom_nav_menu"
            android:id="@+id/bottomNav"
            app:labelVisibilityMode="labeled"
            android:layout_gravity="bottom|center"
         app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior"
            app:itemIconTint="@color/bottom_nav_bar_color"
            app:itemTextColor="@color/bottom_nav_bar_color"
             />


</androidx.coordinatorlayout.widget.CoordinatorLayout>